@model RAS.Bootcamp.Catalog.Mvc.Net.Datas.Entities.Transaksi;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Order Detail</h2>
<div class="row">
    <div class="col-m12">
        <div class="form-group">
            <div class="form-label">INVOICE ID :@($"INV{Model.Id.ToString().PadLeft(8, '0')}")</div>
        </div>

        <div class="form-group">
            <div class="form-label">Status ID :@Model.StatusTransaksi</div>
        </div>

        <div class="form-group">
            @* @if (Model.StatusTransaksi == "WAITINGFORPAYMENT") *@
            {
                <form asp-action="OrderPayment" asp-controller="Order" method="post">
                    <input type="hidden" asp-for="Id" value="@Model.Id"/>
                    <button type="submit" class="btn btn-danger">
                        Bayar
                    </button>
                </form>
            }
        </div>
    </div>
</div>