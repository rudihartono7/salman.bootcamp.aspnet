@model RAS.Bootcamp.Mvc.Net.Models.LoginRequest;

<div class="row">
    <div class="col-md-12">
        @if(ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != ""){
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <form role="form" asp-action="Login" method="post">
            <div class="form-group">
                <label for="Username">
                    Username
                </label>
                <input type="text" asp-for="Username" class="form-control" id="Username" />
            </div>
            <div class="form-group">
                <label for="Password">
                    Password
                </label>
                <input type="password" class="form-control" asp-for="Password" id="Password" />
            </div>
            <button type="submit" class="btn btn-primary">
                login
            </button>
            <a href="@Url.ActionLink("Register")"> register</a>
        </form>
    </div>
</div>